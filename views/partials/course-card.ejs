<div class="course-card">
    <div class="course-image">
        <img src="<%= course.image_path %>" alt="<%= course.title %>">
    </div>
    <div class="course-content">
        <h3><%= course.title %></h3>
        <p class="course-description"><%= course.description.substring(0, 100) %>...</p>
        <div class="course-meta">
            <span class="course-duration"><i class="far fa-clock"></i> <%= course.duration %></span>
            <span class="course-price"><%= course.price.toFixed(2) %>€</span>
        </div>
        <div class="course-actions">
            <a href="/formations/<%= course.id %>" class="btn btn-outline">Détails</a>
            <form action="/cart/add/<%= course.id %>" method="POST" class="add-to-cart-form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary">Ajouter au panier</button>
            </form>
        </div>
    </div>
</div>